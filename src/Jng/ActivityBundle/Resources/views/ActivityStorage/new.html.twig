{% extends "JngActivityBundle:layout:layout_lightbox.html.twig" %}
{% form_theme form 'JngActivityBundle:Form:fields.html.twig' %}

{% block title %}Activity Storage creation{% endblock %}
{% block title_section %}
    <h1>Activity Storage creation</h1>
    <h2>Create some activity storage</h2>
{% endblock %}   

{% block content %}
    {{ form(form) }}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet"  href="{{ asset('bundles/jngactivity/css/jquery.simple-dtpicker.css') }}" />
{% endblock %}
{% block javascripts %}
<script type="text/javascript" src="{{ asset('bundles/jngactivity/js/jquery.simple-dtpicker.js') }}"></script>
<script type="text/javascript" >
    $(function() {
        $('#jng_activitybundle_activitystorage_start').appendDtpicker({"locale": "fr",'dateFormat' : "DD/MM/YYYY hh:mm","minuteInterval": 15,"firstDayOfWeek": 1,"closeOnSelected": true});
        $('#jng_activitybundle_activitystorage_end').appendDtpicker({"locale": "fr",'dateFormat' : "DD/MM/YYYY hh:mm","minuteInterval": 15,"firstDayOfWeek": 1,"closeOnSelected": true});
        $("#facebox .content").css("width",($(window).width()/2)+"px")
            .css("height",($(window).height()/2)+"px").css("overflow","auto");
        $("#facebox").css("margin","auto");    
        $(window).resize(function() {
          $("#facebox .content").css("width",($(window).width()/2)+"px")
            .css("height",($(window).height()/2)+"px");
          $("#facebox").css("top","10px").css("left","10px");   
        }); 
    });
</script>    
{% endblock %} 
    
