<!DOCTYPE html>
<html>
    <head>
        <meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0" name="viewport">
        {% block head %}
        <script src="http://use.typekit.net/gis6vng.js"></script>
        <script>try {Typekit.load();}catch(e){}</script>
        <link rel="icon" sizes="16x16" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.3.0/pure-min.css">
        <link rel="stylesheet"  href="{{ asset('bundles/jngactivity/css/baby-blue.css') }}" />
        <link rel="stylesheet"  href="{{ asset('bundles/jngactivity/css/activity.css') }}" />
        <script type="text/javascript" src="{{ asset('js/jquery-1.10.2.min.js') }}"></script>
        <title>{% block title %}{% endblock %} - Activity Manager</title>
        {% endblock %}
        {% block stylesheets %}{% endblock %}
        {% block javascripts %}{% endblock %}           
        <script type="text/javascript">
         /* <![CDATA[ */
        $(document).ready(function() {
        $("form").submit(function(){
            $("#loading-full,.loading-ball").fadeIn();
        });
            });
        /* ]]> */
        </script>
    </head>
    <body>
         <div id="loading-full"></div><div class="loading-ball"></div>
{# L'utilisateur est-il connecté ? #}
{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        
            <div class="header">
            <div class="menu">
                <div class="pure-menu pure-menu-open pure-menu-fixed pure-menu-horizontal">
                    <a class="pure-menu-heading {% if get_controller_name() =="" %}pure-menu-selected{% endif %}" href="{{ path('activitystorage') }}">Activity manager</a>
                    <ul>
                        <li class="{% if get_controller_name() =="activity" %}pure-button pure-button-success pure-menu-selected{% endif %}"><a href="{{ path('activity') }}">Activity</a></li>
                        <li class="{% if get_controller_name() =="business" %}pure-button pure-button-success pure-menu-selected{% endif %}"><a href="{{ path('business') }}">Business</a></li>
                        <li class="{% if get_controller_name() =="customer" %}pure-button pure-button-success pure-menu-selected{% endif %}"><a href="{{ path('customer') }}">Customer</a></li>
                        <li class="{% if get_controller_name() =="task" %}pure-button pure-button-success pure-menu-selected{% endif %}"><a href="{{ path('task') }}">Task</a></li>
                        
                        {# L'utilisateur est connecté ! #}
                        <li><a href="{{ path('fos_user_security_logout') }}">Déconnexion (<i>{{ app.security.getToken().getUser().getUsername() }}</i>)</a></li>

                        {# L'utilisateur est-il admin ? #}
                        {% if is_granted('ROLE_ADMIN') %}
                            {# L'utilisateur est admin ! #}
                            <li><a href="{{ path('admin') }}">Administration</a></li>
                        {% endif %}
                        
                    </ul>
                </div>    
            </div>
            <div class="title">    
                {% block title_section %}{% endblock %}  
                </div>        
            </div>        
            <div class="content">
            {% for flashMessage in app.session.flashbag.get('notice') %}
                    <div class="flash-message">
                        <em>Notice</em>: {{ flashMessage }}
                    </div>
            {% endfor %}
            {% block content %}{% endblock %}
                </div>
                <div class="footer">
            {% block footer %}
                        &copy; Copyright 2013 by <a href="http://www.julnegre.fr/">Julnegre</a>.
            {% endblock %}
                    </div>

                    <div class="search">
                    {% block search %}{% endblock %}
                    </div>   
{% else %}
            
    <META http-equiv="refresh" content="0;URL={{ path('fos_user_security_login') }}">

{% endif %}                               
                </body>
            </html>

